<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#072227"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="31dp"
        android:layout_height="33dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.014"
        app:srcCompat="@drawable/icon" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="97dp"
        android:layout_height="32dp"
        android:text="CryptoEx"
        android:textColor="#4FBDBA"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.175"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.015" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="630dp"
        android:background="#072227"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.911">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:backgroundTint="#9F7D15"
                app:cardCornerRadius="25dp">

                <ImageButton
                    android:id="@+id/bnb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#9F7D15"
                    android:onClick="bnb"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/bnb" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:backgroundTint="#C6C0C0"
                app:cardCornerRadius="25dp">

                <ImageButton
                    android:id="@+id/xml"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#C6C0C0"
                    android:onClick="xml"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/estexml" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:backgroundTint="#AC100A"
                app:cardCornerRadius="25dp">

                <ImageButton
                    android:id="@+id/avax"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#AC100A"
                    android:onClick="avax"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/avax" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:backgroundTint="#152859"
                app:cardCornerRadius="25dp">

                <ImageButton
                    android:id="@+id/atom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#152859"
                    android:onClick="atom"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/atom" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:backgroundTint="#DDDDDD"
                app:cardCornerRadius="25dp">

                <ImageButton
                    android:id="@+id/ada"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#DDDDDD"
                    android:onClick="ada"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/ada" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:backgroundTint="#292B35"
                app:cardCornerRadius="25dp">

                <ImageButton
                    android:id="@+id/xtz"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#292B35"
                    android:onClick="xtz"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/xtz" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:backgroundTint="#BF6E32"
                app:cardCornerRadius="25dp">

                <ImageButton
                    android:id="@+id/btc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#BF6E32"
                    android:onClick="btc"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/btc" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:backgroundTint="#D8D8D8"
                app:cardCornerRadius="25dp">

                <ImageButton
                    android:id="@+id/eth"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:backgroundTint="#D8D8D8"
                    android:onClick="eth"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/eth" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:backgroundTint="#221E1E"
                app:cardCornerRadius="25dp">

                <ImageButton
                    android:id="@+id/eos"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:backgroundTint="#221E1E"
                    android:onClick="eos"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/eos" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:backgroundTint="#0D8876"
                app:cardCornerRadius="25dp">

                <ImageButton
                    android:id="@+id/rune"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:backgroundTint="#0D8876"
                    android:onClick="rune"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/rune" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona una Criptomoneda:"
        android:textColor="#fff"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.072"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08" />

</androidx.constraintlayout.widget.ConstraintLayout>